<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CavasActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_thevines2" />


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="MissingConstraints">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="8dp">


                        <ImageView
                            android:id="@+id/im_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/copavino"

                            android:src="@drawable/ernestologo" />

                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="30dp"
                            android:text="Alma Negra"
                            android:textStyle="bold"
                            android:textColor="#FFF" />

                        <View
                            style="@style/separator_login"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="90dp"
                            android:layout_marginBottom="25dp" />
                    </RelativeLayout>



                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_height="300dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@drawable/mendoza"/>

                        <ImageView
                            android:layout_width="89dp"
                            android:layout_height="210dp"
                            android:layout_marginVertical="80dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/anblancdeblancs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALMA NEGRA | BLANC DE BLANCS"
                            android:textColor="#FFF"
                            android:textSize="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginHorizontal="40dp"/>

                        <TextView
                            android:layout_width="501dp"
                            android:layout_height="198dp"
                            android:layout_marginVertical="190dp"
                            android:layout_marginLeft="100dp"
                            android:text="@string/almanegra_blanc"
                            android:textColor="#000"
                            android:textSize="14dp" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_height="300dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@drawable/mendoza"/>

                        <ImageView
                            android:layout_width="88dp"
                            android:layout_height="210dp"
                            android:layout_marginVertical="80dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/anbrutnatureespumante" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALMA NEGRA | BRUT NATURE | ESPUMANTE"
                            android:textColor="#FFF"
                            android:textSize="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginHorizontal="40dp"/>

                        <TextView
                            android:layout_width="492dp"
                            android:layout_height="200dp"
                            android:layout_marginVertical="190dp"
                            android:textSize="14dp"
                            android:layout_marginLeft="100dp"
                            android:text="@string/almanegra_brut"
                            android:textColor="#000" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_height="300dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@drawable/mendoza"/>

                        <ImageView
                            android:layout_width="88dp"
                            android:layout_height="210dp"
                            android:layout_marginVertical="80dp"
                            android:layout_marginLeft="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALMA NEGRA | TINTO | 2016"
                            android:textColor="#FFF"
                            android:textSize="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginHorizontal="40dp"/>

                        <TextView
                            android:layout_width="492dp"
                            android:layout_height="200dp"
                            android:layout_marginVertical="190dp"
                            android:textSize="14dp"
                            android:layout_marginLeft="100dp"
                            android:text="@string/almanegra_brut"
                            android:textColor="#000" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_height="300dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@drawable/mendoza"/>

                        <ImageView
                            android:layout_width="103dp"
                            android:layout_height="210dp"
                            android:layout_marginVertical="80dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/antinto2013" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALMA NEGRA | TINTO | 2013"
                            android:textColor="#FFF"
                            android:textSize="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginHorizontal="40dp"/>

                        <TextView
                            android:layout_width="492dp"
                            android:layout_height="190dp"
                            android:layout_marginVertical="190dp"
                            android:textSize="14dp"
                            android:layout_marginLeft="120dp"
                            android:text="@string/almanegra_2013"
                            android:textColor="#000" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_height="300dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@drawable/mendoza"/>

                        <ImageView
                            android:layout_width="91dp"
                            android:layout_height="210dp"
                            android:layout_marginVertical="80dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/anmblend" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALMA NEGRA | M BLEND | 2013"
                            android:textColor="#FFF"
                            android:textSize="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_marginHorizontal="40dp"/>

                        <TextView
                            android:layout_width="492dp"
                            android:layout_height="190dp"
                            android:layout_marginVertical="190dp"
                            android:textSize="12dp"
                            android:layout_marginLeft="120dp"
                            android:text="@string/almanegra_mblend"
                            android:textColor="#000" />

                    </android.support.v7.widget.CardView>



                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>