<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="8dp"
        android:layout_height="310dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        tools:ignore="MissingConstraints"
        card_view:cardPreventCornerOverlap="false">


        <ImageView
            android:id="@+id/iv_fondo"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_gravity="center|top"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_bandera"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginVertical="150dp"
            android:layout_marginLeft="180dp" />

        <TextView
            android:id="@+id/txt_ubicacion"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginVertical="155dp"
            android:gravity="right"
            android:textColor="#FFF"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/iv_botella"
            android:layout_width="85dp"
            android:layout_height="191dp"
            android:layout_marginVertical="119dp"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="40dp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/txt_contenido"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginVertical="176dp"
            android:layout_marginLeft="87dp"
            android:textColor="#000"
            android:textSize="10dp"
            />


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>